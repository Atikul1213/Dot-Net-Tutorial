@model IEnumerable<FirstCoreMVCWebApplication.Models.FormTag.Student>

@{
    ViewData["Title"] = "Student List";
}

<h2>Student List</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Branch</th>
            <th>Actions</th>
            <th>Register</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FullName</td>
                <td>@student.DateOfBirth.ToShortDateString()</td>
                <td>@student.Branch</td>
                <td>
                    <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-info">Details</a>
                </td>
                <td>
                    <a asp-action="Register" asp-controller="FormTag" class="btn btn-primary">Register</a>

                </td>
            </tr>
        }
    </tbody>
</table>